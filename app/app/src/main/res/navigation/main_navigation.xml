<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/coinListFragment">

  <fragment
      android:id="@+id/coinListFragment"
      android:name="net.resulbal.bitcointicker.ui.coinList.CoinListFragment"
      android:label="@string/coin_list"
      tools:layout="@layout/fragment_coin_list"/>

  <fragment
      android:id="@+id/favoriteFragment"
      android:name="net.resulbal.bitcointicker.ui.favorite.FavoriteFragment"
      android:label="@string/favorites"
      tools:layout="@layout/fragment_favorite"/>

  <fragment
      android:id="@+id/profileFragment"
      android:name="net.resulbal.bitcointicker.ui.profile.ProfileFragment"
      android:label="@string/profile"
      tools:layout="@layout/fragment_profile"/>

  <action
      android:id="@+id/goToCoinDetail"
      app:destination="@id/coinDetailFragment"/>
  <fragment
      android:id="@+id/coinDetailFragment"
      android:name="net.resulbal.bitcointicker.ui.coinDetail.CoinDetailFragment"
      android:label="@string/detail"
      tools:layout="@layout/fragment_coin_detail">
    <argument
        android:name="state"
        app:argType="net.resulbal.bitcointicker.data.model.CoinDetail"/>
  </fragment>


</navigation>